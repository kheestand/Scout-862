<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lightningrobotics.scout_862.TeleopActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/CONTENT_LAYOUT"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/CYCLE_DATA">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:id="@+id/CYCLE_COUNTER">

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_previous_cycle"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tv_cycle_number"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/pic_back_arrow"
                    android:layout_width="100dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_next_cycle"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_cycle_number"
                    android:layout_toEndOf="@+id/tv_cycle_number"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/pic_foward_arrow" />

                <TextView
                    android:text="# of Cycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cycle_text"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/btn_next_cycle"
                    android:layout_toStartOf="@+id/btn_next_cycle" />

                <TextView
                    android:text="1"
                    android:layout_width="85dp"
                    android:id="@+id/tv_cycle_number"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="45sp"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_cycle_text"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <ToggleButton
                android:text="Score in High Goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tb_scoreHigh"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/CYCLE_COUNTER"
                android:textOff="Score in High Goal"
                android:textOn="Score in High Goal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tb_scoreHigh">

                <RadioGroup
                    android:layout_height="match_parent"
                    android:id="@+id/rg_fuelHigh"
                    android:layout_width="250dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tb_scoreHigh">

                    <RadioButton
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_0" />

                    <RadioButton
                        android:text="1-10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_1" />

                    <RadioButton
                        android:text="11-20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_2" />

                    <RadioButton
                        android:text="21-30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_3" />

                    <RadioButton
                        android:text="31-40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_4" />

                    <RadioButton
                        android:text="41-50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_5" />

                    <RadioButton
                        android:text="51-60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_6" />

                    <RadioButton
                        android:text="61-70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_7" />

                    <RadioButton
                        android:text="71-80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_8" />

                    <RadioButton
                        android:text="81-90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_9" />

                    <RadioButton
                        android:text="91-100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_10" />

                    <RadioButton
                        android:text="101+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_low_11"
                        android:layout_weight="1" />

                </RadioGroup>

                <RadioGroup
                    android:layout_height="match_parent"
                    android:id="@+id/rg_fuelLow"
                    android:layout_width="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_0" />

                <RadioButton
                    android:text="1-10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_1" />

                <RadioButton
                    android:text="11-20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_2" />

                <RadioButton
                    android:text="21-30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_3" />

                <RadioButton
                    android:text="31-40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_4" />

                <RadioButton
                    android:text="41-50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_5" />

                <RadioButton
                    android:text="51-60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_6" />

                <RadioButton
                    android:text="61-70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_7" />

                <RadioButton
                    android:text="71-80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_8" />

                <RadioButton
                    android:text="81-90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_9" />

                <RadioButton
                    android:text="91-100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_10" />

                    <RadioButton
                    android:text="101+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_high_11"
                    android:layout_weight="1" />

            </RadioGroup>

            </RelativeLayout>

            <ToggleButton
                android:text="Score in Low Goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tb_scoreLow"
                android:textOff="Score in Low Goal"
                android:layout_marginRight="81dp"
                android:layout_marginEnd="81dp"
                android:layout_below="@+id/CYCLE_COUNTER"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textOn="Score in Low Goal" />

        </RelativeLayout>

        <TextView
            android:text="Gears Delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:rotation="0"
            android:layout_below="@+id/CYCLE_DATA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_teleop_addGearsDel"
            android:background="@drawable/arrow_right_cycle"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/tv_teleop_gearsDel"
            android:textSize="50sp"
            android:textAlignment="center"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/btn_teleop_addGearsDel"
            android:layout_alignEnd="@+id/btn_teleop_addGearsDel"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            android:layout_toRightOf="@+id/btn_teleop_subGearsDelivered"
            android:layout_toEndOf="@+id/btn_teleop_subGearsDelivered" />

        <Button
            android:id="@+id/btn_teleop_subGearsDelivered"
            android:background="@drawable/arrow_left_cycle"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>
